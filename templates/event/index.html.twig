{% extends 'base.html.twig' %}

{% block title %}Event Manager{% endblock %}

{% block body %}
    <div class="row-fluid">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="text-align: right">
            <a class="btn btn-success" href="{{ path('event_new') }}">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Ajouter
            </a>
        </div>
    </div>

    <div class="row-fluid">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <table class="table table-global">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Date de début</th>
                    <th>Date de fin</th>
                    <th>Date de publication</th>
                    <th>Association</th>
                    <th>Note</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for event in events %}
                    <tr>
                        <td>{{ event.id }}</td>
                        <td>{{ event.title }}</td>
                        <td>{{ event.description }}</td>
                        <td>{{ event.startDate ? event.startDate|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ event.endDate ? event.endDate|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ event.publishDate ? event.publishDate|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ event.owner ? event.owner.name : '' }}</td>
                        <td>{{ event.rating }}</td>
                        <td class="actions">
                            <a class="btn btn-info" href="{{ path('event_show', {'id': event.id}) }}" style="width: 50%;display:inline;">
                                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Voir
                            </a>
                            <a class="btn btn-primary" href="{{ path('event_edit', {'id': event.id}) }}" style="width: 50%;display:inline">
                                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Modifier
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">Aucun événements trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="row-fluid">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="text-align: right">
            <a class="btn btn-success" href="{{ path('event_new') }}">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Ajouter
            </a>
        </div>
    </div>
{% endblock %}
