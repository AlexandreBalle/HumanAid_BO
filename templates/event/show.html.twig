{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
            <a class="btn btn-light" href="{{ path('event_index') }}">Retour</a>
        </div>
        <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1" style="text-align: right">
            <a class="btn btn-primary" href="{{ path('event_edit', {'id': event.id}) }}">Modifier</a>
        </div>
        <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1" style="text-align: right">
            {{ include('event/_delete_form.html.twig') }}
        </div>
    </div>
    <div class="row-fluid">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <table class="table">
                <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ event.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ event.title }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ event.description }}</td>
                </tr>
                <tr>
                    <th>Date de d√©but</th>
                    <td>{{ event.startDate ? event.startDate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Date de fin</th>
                    <td>{{ event.endDate ? event.endDate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Date de publication</th>
                    <td>{{ event.publishDate ? event.publishDate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Note</th>
                    <td>{{ event.rating }}</td>
                </tr>
                <tr>
                    <th>Association</th>
                    <td>{{ event.owner ? event.owner.name : '' }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
