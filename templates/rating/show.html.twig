{% extends 'base.html.twig' %}

{% block title %}Rating{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
            <a class="btn btn-light" href="{{ path('rating_index') }}">Retour</a>
        </div>
        <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1" style="text-align: right">
            <a class="btn btn-primary" href="{{ path('rating_edit', {'id': rating.id}) }}">Modifier</a>
        </div>
        <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1" style="text-align: right">
            {{ include('rating/_delete_form.html.twig') }}
        </div>
    </div>

    <div class="row-fluid">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <table class="table">
                <tbody>
                    <tr>
                        <th>id</th>
                        <td>{{ rating.id }}</td>
                    </tr>
                    <tr>
                        <th>Note</th>
                        <td>{{ rating.rating }}</td>
                    </tr>
                    <tr>
                        <th>Commentaire</th>
                        <td>{{ rating.comment }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
